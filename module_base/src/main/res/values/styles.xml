<resources>

    <!-- Base application theme. -->
    <style name="module_base_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="module_base_dialog_loading" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item><!--表示页面时候变暗，我们设置false，不变暗-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#fff</item>
    </style>


    <style name="module_base_SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


    <!-- 主界面 设置Style -->
    <style name="module_base_MainActivityColorTranslucentTheme" parent="@style/module_base_AppTheme"/>

    <!-- StatusBar为透明色 -->
    <style name="module_base_ColorTranslucentTheme" parent="@style/module_base_AppTheme" />

</resources>
