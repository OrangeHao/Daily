<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orange.module_pictures">

    <!-- 在Module单独开发模式下使用该mainfest -->
    <application
        android:name=".common.PicturesApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/module_base_AppTheme">
        <activity android:name=".ui.main.PicturesMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.jiandan.PhotoViewActivity"></activity>
    </application>

</manifest>